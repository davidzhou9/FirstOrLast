<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.firstorlast">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name=".InitialLoadingScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AboutScreen"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PlayGame"
            android:label="@string/title_activity_play_game"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LostGame"
            android:label="@string/title_activity_lost_game"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>