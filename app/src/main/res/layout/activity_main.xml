<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.david.firstorlast.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Or Last?"
        android:id="@+id/TitleBar"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:textSize="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/playGameButton"
        android:text="Play Game"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

    <Button
        android:id="@+id/instructions"
        android:text="Instructions"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapetwo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/aboutGame"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapethree"
        android:layout_alignTop="@+id/instructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
