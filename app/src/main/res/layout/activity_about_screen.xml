<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.firstorlast.AboutScreen"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About &quot;First or Last&quot;"
        android:id="@+id/aboutTitleText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutGameText"
        android:layout_marginTop="26dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="normal"
        android:text="&quot;First or Last&quot; is an Android game created by Princeton Computer Science Student, David Zhou. This project was created using Android Studio version 2.1.3. The application itself was tested on a Samsung Galaxy S5. For any additional questions or concerns, please contact the developer at david.zhou@princeton.edu."
        android:layout_below="@+id/aboutTitleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2016 by David Zhou.\nAll rights reserved."
        android:id="@+id/aboutCopyright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Button
        android:id="@+id/backButton"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapethree"
        android:layout_alignBottom="@+id/aboutCopyright"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/aboutTitleText"
        android:layout_toEndOf="@+id/aboutTitleText" />

</RelativeLayout>
